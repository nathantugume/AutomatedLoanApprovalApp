<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arrow shape (triangle facing right) -->
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#FF4081" /> <!-- Set your desired arrow color here -->
            </shape>
        </rotate>
    </item>

    <!-- Vertical line to complete the arrow -->
    <item android:right="0dp" android:left="25dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFD9" /> <!-- Set your desired arrow color here -->
        </shape>
    </item>
</layer-list>

